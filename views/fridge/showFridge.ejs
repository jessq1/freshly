<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <div class="container-lg py-3">
    <a href="/myfridge/<%=user.profile._id%>" class="m-3 btn btn-outline-warning">Back to My Fridge</a>
    <div class="row">
      <div class="col-lg-8">
      <div class="row">
      <div class="col">
        <div class="card shadow p-3 mx-auto bg-body rounded" style="width: 26rem;">
          <div style="height: 25rem;">
          </div>
        <div style="height: 15rem;">
          <a class="btn btn-outline-primary" href="/myfridge/<%= Profile._id %>/freezer ">Look into my Freezer</a>
        </div>
      </div>
      </div>
      <div class="col">
        <div class="card shadow p-3 mx-auto bg-body rounded">
          <div id='firdgeBody' style="height: 40rem;">
            <% Profile.fridgeFood.forEach((food) => { %> 
              <p class="mt-2 mb-0" id='<%= food.foodId %>' name='<%= food.name %>'> <%= food.name +" - "+food.freshness %>% </p>
              <progress  max="100" value='<%= food.freshness %>'></progress>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

</main>

<script src="/javascripts/showRecipe.js"></script>
<%- include('../partials/footer') %>
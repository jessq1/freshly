<%- include('../partials/html-head') %>
<% if (!user) { %>
  <link rel="stylesheet" href="/stylesheets/siwg.css">
<% } %>
</head>
<body>
<%- include('../partials/nav') %>


<main>
  <div class="container-lg py-3">
      <div class="card shadow p-3 mx-auto bg-body rounded" style="width: 22rem;">
        <!-- <p><%= foodItem._id %> </p> -->
        <h5 class="mx-auto">Edit</h5>
            <form action="/myfridge/<%= profile._id %>/fridge?_method=PUT" method="POST">
              <input type="string" name='id' value='<%= foodItem._id %>' hidden>
            <img src="/images/food/VEGETABLES/CHILLI.png" class="card-img-top" alt="Placeholder Img">
            <div class="form-floating my-3">
                <input type="String" class="form-control" id="floatingInput" name="name" value="<%= foodItem.name %> " readonly>
                <label for="floatingInput">Name</label>
              </div>
              <div class="form-floating my-3">
                <input type="Number" class="form-control" id="floatingInput" name="servings" value="<%= foodItem.servings %>" placeholder='<%= foodItem.servings %>'>
                <label for="floatingInput">Servings</label>
              </div>            
                <button class="my-4 btn btn-outline-warning" type="submit">Update Food</button>
            </div>
            </form>
          </div>
    
    
  </div>
</main>


<%- include('../partials/footer') %>
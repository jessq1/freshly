<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>


<main>
  <div class="container-lg py-3">
      <div class="card shadow p-3 mx-auto bg-body rounded" style="width: 22rem;">
        <h5 class="mx-auto">New Food Data</h5>
            <form action="/food" method="POST">
            <img src="/images/food/VEGETABLES/CHILLI.png" class="card-img-top" alt="Placeholder Img">
            <div class="form-floating my-3">
                <input type="String" class="form-control" id="floatingInput" name="name" placeholder="name">
                <label for="floatingInput">Name</label>
              </div>
              <label class="mx-1 my-1">Fridge Time</label>
            <div class="form-floating mb-3">
              <div class="row g-3">
                <div class="col">
                  <input type="Number" class="form-control" id="floatingInput" name="fridgeM" placeholder="Month">
                </div>
                <div class="col">
                  <input type="Number" class="form-control" id="floatingInput" name="fridgeW" placeholder="Week">
                </div>
                <div class="col">
                  <input type="Number" class="form-control" id="floatingInput" name="fridgeD" placeholder="Day">
                </div>
              </div>
              </div>

              <label class="mx-1 my-1">Freeze Time</label>
              <div class="form-floating mb-3">
                <div class="row g-3">
                  <div class="col">
                    <input type="Number" class="form-control" id="floatingInput" name="freezeM" placeholder="Month">
                  </div>
                  <div class="col">
                    <input type="Number" class="form-control" id="floatingInput" name="freezeW" placeholder="Week">
                  </div>
                  <div class="col">
                    <input type="Number" class="form-control" id="floatingInput" name="freezeD" placeholder="Day">
                  </div>
                </div>
                </div>

                <button class="my-4 btn btn-outline-warning" type="submit">Add Food</button>
            </div>
            </form>
          </div>
    
    
  </div>
</main>


<%- include('../partials/footer') %>
